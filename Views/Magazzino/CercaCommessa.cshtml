@{
    ViewData["Title"] = "Cerca Commessa";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-search"></i> Cerca Commessa</h5>
                </div>
                <div class="card-body">
                    <form asp-action="CercaCommessa" method="post" id="formCercaCommessa">
                        <div asp-validation-summary="All" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label for="codiceCommessa" class="form-label">Codice Commessa</label>
                            <select class="form-select" 
                                    id="codiceCommessa" 
                                    name="codiceCommessa" 
                                    required>
                                <option value="">-- Seleziona o cerca una commessa --</option>
                            </select>
                            <small class="form-text text-muted">Inizia a digitare per cercare</small>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-eye"></i> Visualizza Dettaglio
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="mt-3 text-center">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Torna alla Dashboard
                </a>
            </div>

            <!-- Commesse Recenti -->
            <div class="card mt-4">
                <div class="card-header">
                    <h6 class="mb-0"><i class="bi bi-clock-history"></i> Commesse Attive</h6>
                </div>
                <div class="card-body">
                    <div id="commesseRecenti">
                        <div class="text-center">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Caricamento...</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Select2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />
    
    <!-- Select2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function() {
            // Inizializza Select2 con AJAX
            $('#codiceCommessa').select2({
                theme: 'bootstrap-5',
                placeholder: '-- Seleziona o cerca una commessa --',
                allowClear: true,
                ajax: {
                    url: '/Magazzino/GetCommesseAttive',
                    dataType: 'json',
                    delay: 250,
                    data: function (params) {
                        return {
                            term: params.term // search term
                        };
                    },
                    processResults: function (data) {
                        return {
                            results: data.map(function(item) {
                                return {
                                    id: item.codice,
                                    text: item.codice + ' - ' + item.cliente + ' (' + item.totaleUnita + ' pz, ' + item.numeroLotti + ' lotti)'
                                };
                            })
                        };
                    },
                    cache: true
                },
                minimumInputLength: 0 // Mostra risultati anche senza digitare
            });

            // Carica commesse recenti per visualizzazione rapida
            fetch('/Magazzino/GetCommesseAttive')
                .then(response => response.json())
                .then(data => {
                    const container = document.getElementById('commesseRecenti');
                    
                    if (data.length === 0) {
                        container.innerHTML = '<p class="text-muted text-center">Nessuna commessa attiva</p>';
                        return;
                    }

                    let html = '<div class="list-group">';
                    data.forEach(c => {
                        html += `
                            <a href="/Magazzino/DettaglioCommessa?codice=${encodeURIComponent(c.codice)}" 
                               class="list-group-item list-group-item-action">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">${c.codice}</h6>
                                    <small>${c.totaleUnita} pz</small>
                                </div>
                                <p class="mb-1"><small class="text-muted">Cliente: ${c.cliente}</small></p>
                                <small>${c.numeroLotti} lotti attivi</small>
                            </a>
                        `;
                    });
                    html += '</div>';
                    
                    container.innerHTML = html;
                })
                .catch(error => {
                    console.error('Errore:', error);
                    document.getElementById('commesseRecenti').innerHTML = 
                        '<p class="text-danger">Errore nel caricamento delle commesse</p>';
                });
        });
    </script>
}