@model StockMaster.ViewModels.Anagrafiche.ArticoliViewModel
@{
    ViewData["Title"] = "Gestione Articoli";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-box"></i> Gestione Articoli</h2>
        <div>
            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modalNuovoArticolo">
                <i class="bi bi-plus-circle"></i> Nuovo Articolo
            </button>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalImportCsv">
                <i class="bi bi-file-earmark-arrow-up"></i> Import CSV
            </button>
        </div>
    </div>

    <!-- Messaggi -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ImportErrors"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show">
            <strong>Dettagli errori import:</strong><br>
            @Html.Raw(TempData["ImportErrors"])
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Tabella Articoli -->
    <div class="card">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Codice</th>
                        <th>Descrizione</th>
                        <th>UM</th>
                        <th>Categoria</th>
                        <th>Materiale</th>
                        <th>Data Creazione</th>
                        <th style="width: 150px;">Azioni</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var articolo in Model.Articoli)
                    {
                        <tr>
                            <td><strong>@articolo.Codice</strong></td>
                            <td>@articolo.Descrizione</td>
                            <td>@articolo.UnitaMisura</td>
                            <td>@articolo.Categoria</td>
                            <td>@articolo.Materiale</td>
                            <td><small>@articolo.DataCreazione.ToString("dd/MM/yyyy")</small></td>
                            <td>
                                <button type="button" class="btn btn-sm btn-outline-primary" 
                                        onclick="modificaArticolo(@articolo.Id, '@articolo.Codice', '@articolo.Descrizione', '@articolo.UnitaMisura', '@articolo.Categoria', '@articolo.Note')">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button type="button" class="btn btn-sm btn-outline-danger" 
                                        onclick="eliminaArticolo(@articolo.Id, '@articolo.Codice')">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (!Model.Articoli.Any())
            {
                <p class="text-center text-muted mt-4">Nessun articolo presente. Creane uno nuovo o importa da CSV.</p>
            }
        </div>
    </div>
</div>

<!-- Modal Nuovo/Modifica Articolo -->
<div class="modal fade" id="modalNuovoArticolo" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="SalvaArticolo" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitle">Nuovo Articolo</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="Id" id="articoloId" value="0" />
                    
                    <div class="mb-3">
                        <label class="form-label">Codice *</label>
                        <input type="text" class="form-control" name="Codice" id="articoloCodice" required />
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Descrizione *</label>
                        <input type="text" class="form-control" name="Descrizione" id="articoloDescrizione" required />
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Unit√† di Misura</label>
                        <input type="text" class="form-control" name="UnitaMisura" id="articoloUM" placeholder="PZ" />
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Categoria</label>
                        <input type="text" class="form-control" name="Categoria" id="articoloCategoria" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Materiale</label>
                        <input type="text" class="form-control" name="Materiale" id="articoloMateriale" />
                    </div>         

                    <div class="mb-3">
                        <label class="form-label">Note</label>
                        <textarea class="form-control" name="Note" id="articoloNote" rows="2"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                    <button type="submit" class="btn btn-primary">Salva</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal Import CSV -->
<div class="modal fade" id="modalImportCsv" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="ImportArticoliCsv" method="post" enctype="multipart/form-data">
                <div class="modal-header">
                    <h5 class="modal-title">Import Articoli da CSV</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-info">
                        <strong>Formato CSV atteso:</strong><br>
                        <code>Codice;Descrizione;UnitaMisura;Categoria</code><br>
                        <small>Separatore: <strong>punto e virgola (;)</strong></small><br>
                        <small>Prima riga (header) viene ignorata</small>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Seleziona file CSV</label>
                        <input type="file" class="form-control" name="file" accept=".csv" required />
                    </div>
                    
                    <div class="alert alert-warning">
                        <small><i class="bi bi-exclamation-triangle"></i> Gli articoli esistenti verranno aggiornati</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                    <button type="submit" class="btn btn-primary">Importa</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Form eliminazione (nascosto) -->
<form id="formElimina" asp-action="EliminaArticolo" method="post" style="display:none;">
    <input type="hidden" name="id" id="eliminaId" />
</form>

@section Scripts {
    <script>
        function modificaArticolo(id, codice, descrizione, um, categoria, materiale, note) {
            document.getElementById('modalTitle').textContent = 'Modifica Articolo';
            document.getElementById('articoloId').value = id;
            document.getElementById('articoloCodice').value = codice;
            document.getElementById('articoloDescrizione').value = descrizione;
            document.getElementById('articoloUM').value = um || '';
            document.getElementById('articoloCategoria').value = categoria || '';
            document.getElementById('articoloMateriale').value = materiale || '';
            document.getElementById('articoloNote').value = note || '';
            
            new bootstrap.Modal(document.getElementById('modalNuovoArticolo')).show();
        }

        function eliminaArticolo(id, codice) {
            if (confirm(`Confermi l'eliminazione dell'articolo '${codice}'?`)) {
                document.getElementById('eliminaId').value = id;
                document.getElementById('formElimina').submit();
            }
        }

        // Reset form quando chiudi modal
        document.getElementById('modalNuovoArticolo').addEventListener('hidden.bs.modal', function () {
            document.getElementById('modalTitle').textContent = 'Nuovo Articolo';
            document.getElementById('articoloId').value = '0';
            document.querySelector('#modalNuovoArticolo form').reset();
        });
    </script>
}