@model StockMaster.ViewModels.Anagrafiche.FornitoriViewModel
@{
    ViewData["Title"] = "Gestione Fornitori";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-truck"></i> Gestione Fornitori</h2>
        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modalNuovoFornitore">
            <i class="bi bi-plus-circle"></i> Nuovo Fornitore
        </button>
    </div>

    <!-- Messaggi -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Tabella Fornitori -->
    <div class="card">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>P.IVA</th>
                        <th>Telefono</th>
                        <th>Email</th>
                        <th>Stato</th>
                        <th style="width: 150px;">Azioni</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var fornitore in Model.Fornitori)
                    {
                        <tr class="@(!fornitore.Attivo ? "table-secondary" : "")">
                            <td><strong>@fornitore.Nome</strong></td>
                            <td>@fornitore.PartitaIva</td>
                            <td>@fornitore.Telefono</td>
                            <td>@fornitore.Email</td>
                            <td>
                                @if (fornitore.Attivo)
                                {
                                    <span class="badge bg-success">Attivo</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Non Attivo</span>
                                }
                            </td>
                            <td>
                                <button type="button" class="btn btn-sm btn-outline-primary" 
                                        onclick="modificaFornitore(@fornitore.Id, '@fornitore.Nome', '@fornitore.PartitaIva', '@fornitore.Indirizzo', '@fornitore.Telefono', '@fornitore.Email', @fornitore.Attivo.ToString().ToLower(), '@fornitore.Note')">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button type="button" class="btn btn-sm btn-outline-danger" 
                                        onclick="eliminaFornitore(@fornitore.Id, '@fornitore.Nome')">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (!Model.Fornitori.Any())
            {
                <p class="text-center text-muted mt-4">Nessun fornitore presente. Creane uno nuovo.</p>
            }
        </div>
    </div>
</div>

<!-- Modal Nuovo/Modifica Fornitore -->
<div class="modal fade" id="modalNuovoFornitore" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form asp-action="SalvaFornitore" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitle">Nuovo Fornitore</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="Id" id="fornitoreId" value="0" />
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Nome *</label>
                            <input type="text" class="form-control" name="Nome" id="fornitoreNome" required />
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Partita IVA</label>
                            <input type="text" class="form-control" name="PartitaIva" id="fornitorePartitaIva" />
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Indirizzo</label>
                        <input type="text" class="form-control" name="Indirizzo" id="fornitoreIndirizzo" />
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Telefono</label>
                            <input type="text" class="form-control" name="Telefono" id="fornitoreTelefono" />
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Email</label>
                            <input type="email" class="form-control" name="Email" id="fornitoreEmail" />
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="Attivo" id="fornitoreAttivo" checked />
                            <label class="form-check-label" for="fornitoreAttivo">
                                Fornitore attivo
                            </label>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Note</label>
                        <textarea class="form-control" name="Note" id="fornitoreNote" rows="2"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                    <button type="submit" class="btn btn-primary">Salva</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Form eliminazione -->
<form id="formElimina" asp-action="EliminaFornitore" method="post" style="display:none;">
    <input type="hidden" name="id" id="eliminaId" />
</form>

@section Scripts {
    <script>
        function modificaFornitore(id, nome, piva, indirizzo, telefono, email, attivo, note) {
            document.getElementById('modalTitle').textContent = 'Modifica Fornitore';
            document.getElementById('fornitoreId').value = id;
            document.getElementById('fornitoreNome').value = nome;
            document.getElementById('fornitorePartitaIva').value = piva || '';
            document.getElementById('fornitoreIndirizzo').value = indirizzo || '';
            document.getElementById('fornitoreTelefono').value = telefono || '';
            document.getElementById('fornitoreEmail').value = email || '';
            document.getElementById('fornitoreAttivo').checked = attivo;
            document.getElementById('fornitoreNote').value = note || '';
            
            new bootstrap.Modal(document.getElementById('modalNuovoFornitore')).show();
        }

        function eliminaFornitore(id, nome) {
            if (confirm(`Confermi l'eliminazione del fornitore '${nome}'?`)) {
                document.getElementById('eliminaId').value = id;
                document.getElementById('formElimina').submit();
            }
        }

        document.getElementById('modalNuovoFornitore').addEventListener('hidden.bs.modal', function () {
            document.getElementById('modalTitle').textContent = 'Nuovo Fornitore';
            document.getElementById('fornitoreId').value = '0';
            document.querySelector('#modalNuovoFornitore form').reset();
            document.getElementById('fornitoreAttivo').checked = true;
        });
    </script>
}