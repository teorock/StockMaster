@model List<StockMaster.ViewModels.Admin.UserListViewModel>
@{
    ViewData["Title"] = "Gestione Utenti";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-people"></i> Gestione Utenti</h2>
            <a asp-area="" asp-controller="Account" asp-action="Register" class="btn btn-success">
                <i class="bi bi-person-plus"></i> Nuovo Utente
            </a>
    </div>

    <!-- Messaggi -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Tabella Utenti -->
    <div class="card">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Nome Completo</th>
                        <th>Email</th>
                        <th>Reparto</th>
                        <th>Ruoli</th>
                        <th>Stato</th>
                        <th>Ultimo Accesso</th>
                        <th style="width: 200px;">Azioni</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr class="@(!user.IsAttivo ? "table-secondary" : "")">
                            <td><strong>@user.UserName</strong></td>
                            <td>@user.NomeCompleto</td>
                            <td>@user.Email</td>
                            <td>@user.Reparto</td>
                            <td>
                                @foreach (var role in user.Roles)
                                {
                                    <span class="badge bg-primary me-1">@role</span>
                                }
                                @if (!user.Roles.Any())
                                {
                                    <span class="text-muted">Nessun ruolo</span>
                                }
                            </td>
                            <td>
                                @if (user.IsAttivo)
                                {
                                    <span class="badge bg-success">Attivo</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Disabilitato</span>
                                }
                            </td>
                            <td>
                                @if (user.UltimoAccesso.HasValue)
                                {
                                    <small>@user.UltimoAccesso.Value.ToString("dd/MM/yyyy HH:mm")</small>
                                }
                                else
                                {
                                    <small class="text-muted">Mai</small>
                                }
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary" title="Modifica">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                
                                <form asp-action="ToggleStatus" asp-route-id="@user.Id" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-sm btn-outline-warning" title="@(user.IsAttivo ? "Disabilita" : "Abilita")">
                                        <i class="bi bi-@(user.IsAttivo ? "pause" : "play")-circle"></i>
                                    </button>
                                </form>

                                <button type="button" class="btn btn-sm btn-outline-danger" 
                                        onclick="confermaEliminazione('@user.Id', '@user.UserName')" title="Elimina">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (!Model.Any())
            {
                <p class="text-center text-muted mt-4">Nessun utente presente.</p>
            }
        </div>
    </div>
</div>

<!-- Form eliminazione -->
<form id="formElimina" asp-action="Delete" method="post" style="display:none;">
    <input type="hidden" name="id" id="eliminaId" />
</form>

@section Scripts {
    <script>
        function confermaEliminazione(userId, userName) {
            if (confirm('Confermi l\'eliminazione dell\'utente \'' + userName + '\'?\n\nQuesta azione Ã¨ irreversibile.')) {
                document.getElementById('eliminaId').value = userId;
                document.getElementById('formElimina').submit();
            }
        }
    </script>
}